<body>
    <nav class="navbar navbar-dark bg-dark" id="navbar">
        <div class="container">
            <a class="navbar-brand" href="index.html" style="font-size: 1.2em; text-shadow: -2px 2px 2px thistle;">
            <img src="./images/logo.png" width="50" height="50" class="d-inline-block align-top" alt="" loading="lazy">
            Travel Planner
            </a>
        </div>
    </nav>

    <div class="container main" style="margin-bottom: 5%;">
        <div class="row">
            <div class="col-md-3">
                <div class="sidenav">
                    <div><a href="index.html">About</a></div>
                    <div><a href="graph.html">Locations Graph</a></div>
                    <div><a href="locations.html">Locations</a></div>
                    <div><a href="packages.html">Packages</a></div>
                </div>
            </div>
            <div class="col-md-1">
            </div>
            <div class="col-md-8" style="background-color: lavenderblush;">
                <!-- code -->
                {{#if msg}}
                <div id="msg" style="padding: 2% 0; background-color:rgba(236, 30, 30, 0.3); border-radius:10px; margin: 2% 0;">
                    <h6 style="padding: 1%;">Please login (or sign up) to book a plan/ package and view your bookings!</h6>
                </div>
                {{/if}}
                <form action="/login/" method="POST" name="login-form">
                    <div class="form-group">
                      <label for="email">Email: </label>
                      <input type="email" class="form-control" id="email" name="email">
                    </div>
                    <div class="form-group">
                        <label for="pass">Password: </label>
                        <input type="password" class="form-control" id="pass" name="pass">
                    </div>
                    <button type="submit" class="btn btn-primary" formaction="/login" formmethod="POST">Log In</button>
                </form>
                <br>
                <button class="btn btn-primary"><a style="color: white;" href="signup.html">Sign up instead</a></button>
            </div>
        </div>
